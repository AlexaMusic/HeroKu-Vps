{
  "name": "my-ssh-app",
  "description": "A Dockerized SSH server with ngrok",
  "image": "my-ssh-app",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "13"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-apt"
    },
    {
      "url": "heroku/docker"
    }
  ],
  "env": {
    "ngrokid": {
      "description": "ngrok auth token",
        "value": "",      
      "required": true
    },
    "Password": {
      "description": "root password",
        "value": "",      
      "required": true
    }
  },
  "scripts": {
    "postdeploy": "/1.sh"
  },
  "expose": [
    "80",
    "8888",
    "8080",
    "443",
    "5130",
    "5131",
    "5132",
    "5133",
    "5134",
    "5135",
    "3306"
  ]
}
