{
  "name": "my-ssh-server",
  "description": "A Docker container running an SSH server with Ngrok tunneling",
  "addons": [
    "heroku-postgresql"
  ],
  "build": {
    "env": {
      "ngrokid": {
        "description": "Ngrok AuthToken",
        "value": "<your_ngrok_token>"
      },
      "Password": {
        "description": "Password to be used for SSH login",
        "value": "<your_password>"
      }
    },
    "docker": {
      "web": "Dockerfile"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "Free"
    }
  },
  "stack": "container"
}
