{
  "name": "ngrok-docker-app",
  "description": "Example app to run Ngrok with authentication on Heroku",
  "image": "registry.heroku.com/ngrok-docker-app/web",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "as": "DATABASE"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/jvm"
    }
  ],
  "environments": {
    "production": {
      "AUTH_TOKEN": {
        "description": "Ngrok AuthToken",
        "required": true
      },
      "PASSWORD": {
        "description": "Custom Ngrok password",
        "required": true
      }
    }
  }
}
