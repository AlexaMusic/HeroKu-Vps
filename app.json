{
  "name": "my-ssh-server",
  "description": "A Docker container running an SSH server with Ngrok tunneling",
  "image": "my-ssh-server",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "as": "DATABASE"
    }
  ],
   "environments": {
      "ngrokid": {
        "description": "The Ngrok AuthToken",
        "value": "",
        "required": true
      },
      "Password": {
        "description": "The custom password for the root user",
        "value": "",
        "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "Free"
    }
  },
  "build": {
    "docker": {
      "web": "Dockerfile"
    }
  },
  "stack": "container"
}
